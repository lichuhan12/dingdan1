/* pages/student/student.wxss */
#student_box{
  width: 100%;
  height: 1500rpx;
  background: #f0f0f0;
}
.student_top{
  width: 100%;
  height: 100rpx;
  background: #181818;
  box-sizing: border-box;
  padding:0 20rpx;
  line-height: 100rpx;
}
.student_top>view{
  color: #d4ab81;
  position: relative;
}
.student_top>view>image:first-of-type{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}
.student_top>view>image:last-of-type{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  position: absolute;
  right: 20rpx;
  top: 15rpx;
}
.student_nav{
  width: 100%;
  height: auto;
  display: flex;
  padding: 20rpx 0;
  background: #fff;
}
.nav_list{
  width: 20%;
  text-align: center;
}
.nav_list>view{
  font-size: 30rpx;
}
.nav_list>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.quess_like{
  width: 100%;
  height: auto;
  background: #fff;
  margin-top: 20rpx;
}
.quess_like_text{
  width: 100%;
  color: #777;
  padding: 20rpx;
}
.quess_like_list{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  border-bottom: 10rpx solid #f0f0f0;
}
.quess_like_img{
  width: 200rpx;
}
.quess_like_img>image{
  width: 200rpx;
  height: 200rpx;
}
.quess_like_list_g{
  width: 500rpx;
  padding-left: 20rpx;
}
.quess_like_listg_title{
  font-size: 40rpx;
  font-weight: 700;
}
.quess_like_list_g_user>image{
  width: 200rpx;
  height: 50rpx;
}
.quess_like_list_g_user>text{
  margin-left: 40rpx;
}
.quess_like_list_g_fig{
  font-size: 35rpx;
  color: #777;
}
.quess_like_list_g_fig>text:nth-of-type(2){
  margin-left: 40rpx;
}
.quess_like_list_g_nav{
  display: flex;
}
.quess_like_list_g_nav_s{
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
  border: 1px solid #bbb;
  color: #bbb;
  margin-left: 10rpx;
}
.more_cont{
  width: 100%;
  line-height: 70rpx;
  text-align: center;
}